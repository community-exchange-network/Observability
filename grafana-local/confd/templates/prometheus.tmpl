global:
  scrape_interval: 1m

scrape_configs:
  - job_name: 'prometheus' # prometheus is a source of metrics for services
    scrape_interval: 1m
    static_configs:
      - targets: ['localhost:9090']
    basic_auth:      #  password protected connection from Prometheus to Prometheus
      username: ${CES_PROMETHEUS_USER}
      password: ${CES_PROMETHEUS_PWD}

  - job_name: 'node' # Node Exporter provides metrics for the host
    static_configs:
      - targets: ['node-exporter:9100']
    basic_auth:      #  password protected connection from Prometheus to Node Exporter
      username: ${CES_NODE_EXPORTER_USER}
      password: ${CES_NODE_EXPORTER_PWD}
